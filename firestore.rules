rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - authenticated access only, users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Invoices - authenticated users can read, only admins can write
    match /invoices/{invoiceId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.role == 'admin';
    }

    // Clients - authenticated users can read, only admins can write
    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.role == 'admin';
    }

    // Quotations - authenticated users can read, only admins can write
    match /quotations/{quotationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.role == 'admin';
    }

    // Proformas - authenticated users can read, only admins can write
    match /proformas/{proformaId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.role == 'admin';
    }

    // Projects - authenticated users can read, only admins can write
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.role == 'admin';
    }

    // POCs - authenticated users can read, only admins can write
    match /pocs/{pocId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.role == 'admin';
    }

    // PDF storage metadata - authenticated access
    match /invoice_pdfs/{pdfId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.role == 'admin';
    }

    // Audit logs - authenticated access, admins can write
    match /audit_logs/{logId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.token.role == 'admin';
    }

    // Deny all other access - explicit deny for security
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
