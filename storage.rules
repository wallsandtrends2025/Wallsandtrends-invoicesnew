rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read invoice PDFs
    match /invoices/{invoiceId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read access to public assets
    match /{allPaths=**} {
      allow read;
    }
  }
}
