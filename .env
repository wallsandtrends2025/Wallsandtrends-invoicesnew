# Exchange Rate API Configuration
# Set VITE_USE_STATIC_RATES=true to use static rates only (for development/testing)
# Set VITE_USE_STATIC_RATES=false to use live API rates (recommended for production)
VITE_USE_STATIC_RATES=false

# API Configuration - Using CORS-enabled services
# Primary: currencyapi.com (supports CORS, demo API key available)
VITE_EXCHANGE_RATE_API_URL=https://api.currencyapi.com/v3/latest?apikey=ad726039f86ffe07c47de2fc&base_currency=INR
VITE_EXCHANGE_RATE_API_KEY=ad726039f86ffe07c47de2fc

# Alternative API services (if primary fails)
# Secondary: exchangerate-api.com (CORS issues in development)
VITE_FALLBACK_API_URL=https://api.exchangerate-api.com/v4/latest/INR
# VITE_FALLBACK_API_KEY=

# Tertiary: fixer.io (requires free API key)
# VITE_TERTIARY_API_URL=https://api.fixer.io/latest?base=INR&symbols=USD,EUR,GBP,JPY,AED,SGD,AUD,CAD,CHF,CNY,KRW,THB,MYR,IDR,VND,PHP,NZD,ZAR,RUB,TRY,SAR,QAR,KWD,BHD,OMR,EGP,NGN,BRL,MXN,ARS,CLP,COP,PEN,ILS,JOD,LBP,IRR,IQD
# VITE_TERTIARY_API_KEY=YOUR_FIXER_API_KEY_HERE

# Cache duration in milliseconds (30 minutes = 30 * 60 * 1000)
# Shorter duration means more frequent API calls but more up-to-date rates
VITE_EXCHANGE_RATE_CACHE_DURATION=1800000